<h1>
    Rock Paper Scissors!
</h1>

<form method="POST" asp-controller="RockPaperScissors" asp-action="Result">
    <div class="gameContainer">
        <div>
            <button class="btn btn-link" name="PlayerSelection" value="Rock" type="submit" asp-controller="RockPaperScissors" asp-action="Result"><i class="far fa-hand-rock fa-10x"></i></button>
        </div>

        <div>
            <button class="btn btn-link" name="PlayerSelection" value="Paper" type="submit" asp-controller="RockPaperScissors" asp-action="Result"><i class="far fa-hand-paper fa-10x"></i></button>
        </div>

        <div>
            <button class="btn btn-link" name="PlayerSelection" value="Scissors" type="submit" asp-controller="RockPaperScissors" asp-action="Result"><i class="far fa-hand-scissors fa-10x"></i></button>
        </div>
    </div>
</form>